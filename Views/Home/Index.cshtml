<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Dojo Survey</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/index.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    @model Dojo
    <form asp-action='Process' method='post' id="container" asp-controller="Home" class="bg-primary" >
         
       <h1>Dojo Survey</h1>
       <div>
       <span asp-validation-for= "Name"></span>  
       <label asp-for="Name">Your Name:</label>
       <input  class="form-control" type="text" asp-for="Name" placeholder="Name">
       </div>
       <div>     
        <span asp-validation-for= "Location"></span>  
        <label asp-for="Location">Location:</label>
        <input type="text" asp-for="Location" placeholder="Seattle">
       </div>    
       <div>
        <span asp-validation-for= "Language"></span>  
        <label asp-for="Language">Language:</label>
        <input type="text" asp-for="Language" placeholder="Python">
       </div>   
       <div>
           <p>Comment (optional): </p>
           <textarea class="form-control" asp-for="Comment" cols="30" rows="5"></textarea>
       </div>
       <input type="submit" id="button" class="btn-secondary" value="Submit"/>
   </form>
</body>
</html>